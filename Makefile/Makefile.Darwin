#COMPILER:
CC              = gcc
CXX             = $(LARCV_CXX)
LINKER          = $(LARCV_CXX)
SOMAKER         = $(LARCV_CXX)
PYTHONINC       = $(shell python-config --includes)
PYTHONLIB       = $(shell python-config --ldflags)

#######"-O" FLAG: (not always ideal with debugging info)
CFLAGS          += -O3
CXXFLAGS        += -O3 
#SOFLAGS         += -O
#AFLAGS          += -O
#DLLFLAGS        += -O

#######DEBUG FLAG:  BOTH COMPILER & LINKER
CFLAGS          += -ggdb
CXXFLAGS        += -ggdb
#AFLAGS          += -ggdb
#SOFLAGS         += -ggdb
DLLFLAGS        += -ggdb

#######PROFILING FLAG: gprof
#CFLAGS          += -pg
#CXXFLAGS        += -pg
#SOFLAGS         += -pg

#######PROFILING FLAG (II): gprof line execution counter (NOT WORKING)
#CFLAGS          += -a
#CXXFLAGS        += -a
#SOFLAGS         += -a

#######"-Wl" FLAG: BOTH COMPILER & LINKER
CFLAGS          += -Wall
#CXXFLAGS        += -Wall -std=c++11 -Wc++11-extensions
#SOFLAGS         += -Wl #-Wall g++
#AFLAGS          += -Wall
DLLFLAGS        += -Wall

#######PENDANTIC FLAG: BOTH COMPILER & LINKER
#CFLAGS          += -pedantic
#CXXFLAGS        += -pedantic
#SOFLAGS         += -pedantic 
#DLLFLAGS        += -pedantic

#######"-Wl" FLAG: BOTH COMPILER & LINKER
CFLAGS          += -fPIC
CXXFLAGS        += -fPIC
#AFLAGS          += -fPIC
SOFLAGS         += -fPIC # g++
DLLFLAGS        += -fPIC

##########
#COMPILER FLAGS
##########
CFLAGS          += -fsigned-char -pipe -DHAVE_LONG_LONG  
CFLAGS          += -fno-common -O3 -D_CORE_$(shell uname -s)_
CXXFLAGS        += -fsigned-char -pipe -DHAVE_LONG_LONG -std=c++11
CXXFLAGS        += -fno-common -O3 -Wno-deprecated -D_CORE_$(shell uname -s)_


##########
#LINKER FLAGS
##########
#DYNAMIC LIBRARY
DLLFLAGS        += -dynamiclib -single_module -undefined dynamic_lookup 
#STATIC LIBRARY
AFLAGS          += -static 
#LOADABLE LIBRARY
#SOFLAGS         += -dynamic # for libtool
#ALTERNATIVE: checks symbols at run-time only -> disable for debugging
#SOFLAGS         += -undefined dynamic_lookup # for libtool

SOFLAGS += -g -shared 


